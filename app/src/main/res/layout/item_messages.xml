<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraint_item_message"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/tv_message_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet, constectur adipiscing elit."
        android:background="@drawable/bg_incoming_chat"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorWhite" />

    <ImageView
        android:id="@+id/img_message_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_message_chat"
        app:layout_constraintStart_toStartOf="@id/tv_message_chat" />


</androidx.constraintlayout.widget.ConstraintLayout>