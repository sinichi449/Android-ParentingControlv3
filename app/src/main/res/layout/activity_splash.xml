<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:background="@drawable/background_blue">

    <ImageView
        android:id="@+id/heads"
        android:layout_width="75dp"
        android:layout_height="140dp"
        android:src="@drawable/head_splash"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="-5dp"
        android:layout_marginRight="-5dp" />

    <ImageView
        android:id="@+id/logowhite"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/logo_white"
        app:layout_constraintTop_toBottomOf="@+id/heads"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/foots"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parenting Control"
        android:fontFamily="@font/arial_narrow_7"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/logowhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/foots"
        android:layout_width="90dp"
        android:layout_height="160dp"
        android:src="@drawable/foot_splash"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="-5dp"
        android:layout_marginLeft="-5dp" />

</androidx.constraintlayout.widget.ConstraintLayout>